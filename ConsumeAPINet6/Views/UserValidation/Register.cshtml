@model ConsumeAPINet6.Models.User
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Abril+Fatface&family=Crimson+Text:ital@0;1&display=swap"
          rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ"
          crossorigin="anonymous" />
    <link rel="stylesheet" href="../css/style.css" />
    <style>
        .text-form {
            font-family: "Roboto Slab", serif;
            font-weight: 300;
        }

        .button {
            border-radius: 10px;
            border: 3px solid rgba(109, 40, 255, 0.8);
            background-color: rgba(157, 113, 254, 0.8);
        }

            .button:hover {
                color: white;
                background-color: rgba(109, 40, 255, 0.8);
            }

        a {
            color: rgba(109,40,255,0.8);
            text-decoration: none;
        }

            a:hover {
                font-weight: 500;
                color: rgba(96, 22, 255, 0.8);
            }
    </style>
</head>
<body>
    <div class="container">
        <form asp-action="Register" method="post" class="text-form">
            @if (ViewData["Error"] != null)
            {
                <div class="alert alert-danger text-form" style="font-size:14px!important" role="alert">@ViewData["Error"]</div>
            }
            <div class="form-floating mb-3">
                <input type="text"
                       asp-for="name"
                       class="form-control"
                       id="name"
                       placeholder="Name"
                       required="required" />
                <label for="name">Name</label>
            </div>
            <div class="form-floating mb-3">
                <input type="email"
                       asp-for="email"
                       class="form-control"
                       id="email"
                       placeholder="Email Address"
                       required="required" />
                <label for="email">Email address</label>
            </div>
            <div class="form-floating mb-3">
                <input type="password"
                       asp-for="password"
                       class="form-control"
                       id="Password"
                       placeholder="Password"
                       required="required" />
                <label for="Password">Password</label>
            </div>
            <div class="d-grid text-form pt-2">
                <button class="button" type="submit" name="sign up">Sign Up</button>
            </div>
            <div class="d-lg-flex justify-content-start align-items-center mb-4 mt-4 text-form">
                <div>Have an account? </div>
                <a class="text-form" asp-controller="UserValidation" asp-action="Login">Log In</a>
            </div>
        </form>
    </div>
</body>
</html>