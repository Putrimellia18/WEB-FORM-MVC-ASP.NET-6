@model ConsumeAPINet6.Models.User
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400..900;1,400..900&family=Roboto+Slab:wght@100..900&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <style>
        .text-form{
            font-family:"Roboto Slab", serif;
            font-weight:300;
        }
        .button{
            border-radius: 10px;
            border: 3px solid rgba(109, 40, 255, 0.8);
            background-color: rgba(157, 113, 254, 0.8);
        }

        .button:hover {
            color: white;
            background-color: rgba(109, 40, 255, 0.8);
        }
        a{
            color: rgba(109,40,255,0.8);
            text-decoration: none;
        }
        a:hover{
            font-weight:500;
            color: rgba(96, 22, 255, 0.8);
        }
    </style>
  </head>
  <body>
    <div class="container">
      <form asp-action="Login">
        @if (ViewData["Error"] != null)
        {
            <div class="alert alert-danger text-form" style="font-size:14px!important" role="alert">@ViewData["Error"]</div>
        }
        <div class="form-floating mb-3 text-form">
          <input
            type="email"
            asp-for="email"
            class="form-control"
            id="email"
            placeholder="name@example.com"
            required="required"
            maxlength="30"
          />
          <label for="email">Email address</label>
        </div>
        <div class="form-floating mb-3 text-form">
          <input
            type="password"
            asp-for="password"
            class="form-control"
            id="password"
            placeholder="Password"
            required="required"
            data-bs-toogle ="password"
            maxlength="20"
          />
          <label for="password">Password</label>
        </div>
        <div class="d-grid text-form pt-2">
            <button class="button" type="submit">Log In</button>
        </div>
        <div class="d-lg-flex justify-content-between align-items-center mb-4 mt-4 text-form">
                <a class="text-form" asp-controller="UserValidation" asp-action="Register">Create An Account</a>
        </div>
      </form>
    </div>
  </body>
</html>
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
}