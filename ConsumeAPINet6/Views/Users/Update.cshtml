@model ConsumeAPINet6.Models.User

@{
    ViewData["Title"] = "Update2";
    Layout = ViewBag.Layout ?? "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        body {
            background-image: url('/assets/background.jpeg');
            background-repeat: no-repeat;
            background-size: cover;
            background-position: center;
        }
        .box{
            background-color: white;
            font-family: "Roboto Slab", serif;
            font-weight: 300;
            box-shadow: 0 10px 8px rgba(109,40,255,0.5);
            border-radius : 10px;
            font-size : 14px;
        }
        .button{
            border-radius: 10px;
            border: 3px solid rgba(109, 40, 255, 0.8);
            background-color: rgba(157, 113, 254, 0.8);
        }

        .button:hover {
            color: white;
            background-color: rgba(109, 40, 255, 0.8);
        }
        h3{
            color: rgba(109, 40, 255, 0.8);
        }
    </style>
</head>
<body>
    <div class="row justify-content-center p-3">
        <div class="col-xl-6 col-md-8 col-sm-8 box p-4 m-3">
            <div>
                <h3>Update User Data</h3>
                <hr class="border border-1 opacity-100"/>
            </div>
            <form asp-action="Update2">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">

                    <input asp-for="id" type="hidden" class="form-control" />
                    <span asp-validation-for="id" class="text-danger"></span>
                </div>
                <div class="form-group mb-2">
                    <label asp-for="name" class="control-label">Name</label>
                    <input asp-for="name" class="form-control" />
                    <span asp-validation-for="name" class="text-danger"></span>
                </div>
                <div class="form-group mb-2">
                    <label asp-for="email" class="control-label">Email</label>
                    <input asp-for="email" class="form-control" />
                    <span asp-validation-for="email" class="text-danger"></span>
                </div>
                <div class="form-group mb-2">
                    <label asp-for="password" class="control-label">Password</label>
                    <input asp-for="password" type="password" class="form-control" />
                    <span asp-validation-for="password" class="text-danger"></span>
                </div>
                <div class="form-group mb-2">
                    <label asp-for="courseid" class="control-label">Course</label>
                    @*                 <input asp-for="courseid" class="form-control"/> *@
                    <select asp-for="courseid" asp-items="@ViewBag.CourseList" class="form-select">
                        <option disabled selected>--Select Course--</option>
                    </select>
                    <span asp-validation-for="courseid" class="text-danger"></span>
                </div>
                <div class="form-group mb-2 d-grid pt-2 pb-2">
                    <button type="submit" class="button">Save</button>
                </div>
            </form>
            <div>
                <a asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
</body>
</html>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
