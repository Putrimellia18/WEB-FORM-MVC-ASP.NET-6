@model ConsumeAPINet6.Models.User
@{
    ViewData["Title"] = "Create User Page";
    Layout = ViewBag.Layout ?? "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        body {
            background-image: url('/assets/background.jpeg');
            background-repeat: no-repeat;
            background-size: cover;
            background-position: center;
        }
        .box{
            background-color: white;
            font-family: "Roboto Slab", serif;
            font-weight: 300;
            box-shadow: 0 10px 8px rgba(109,40,255,0.5);
            border-radius : 10px;
            font-size : 14px;
        }
        .button{
            border-radius: 10px;
            border: 3px solid rgba(109, 40, 255, 0.8);
            background-color: rgba(157, 113, 254, 0.8);
        }

        .button:hover {
            color: white;
            background-color: rgba(109, 40, 255, 0.8);
        }
        h3{
            color: rgba(109, 40, 255, 0.8);
        }
    </style>
</head>
<body>
    <div class="row justify-content-center p-3">
        <div class="col-xl-6 col-md-8 col-sm-8 box p-4 m-3">
            <div>
                <div class="d-flex">
                    <div class="me-auto">
                        <h3>Input New User</h3>
                        <hr class="border border-1 opacity-100"/>
                    </div>
                    <div class="p-2">
                        <a class="button d-grid" asp-controller="Users" asp-action="ReadExcel">Generate From Excel</a>
                    </div>
                </div>

            </div>
            <form asp-action="Create">
                @if (ViewData["Error"] != null)
                {
                    <div class="alert alert-danger text-form" style="font-size:14px!important" role="alert">@ViewData["Error"]</div>
                }
                <div class="mb-2">
                    <label>Name</label>
                    <input type="text" asp-for="name" class="form-control" />
                </div>
                <div class="mb-2">
                    <label>Email</label>
                    <input type="text" asp-for="email" class="form-control" />
                </div class="mb-2">
                <div class="mb-2">
                    <label>Password</label>
                    <input type="password" asp-for="password" class="form-control" />
                </div>                
                <div class="mb-2">
                    <label>Course</label>
                    <select asp-for="courseid" asp-items="@ViewBag.CourseList" class="form-select">
                        <option disabled selected>--Select Course--</option>
                    </select>
                </div>
                <div class="d-grid pt-2 pb-2">
                    <button type="submit" class="button">Create</button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>


